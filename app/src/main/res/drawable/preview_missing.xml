<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/gray" />
      <size
          android:width="40dp"
          android:height="60dp" />
    </shape>
  </item>

  <item
      android:bottom="5dp"
      android:left="5dp"
      android:right="5dp"
      android:top="5dp">
    <shape android:shape="rectangle">
      <stroke
          android:width="1dp"
          android:color="@android:color/white" />
    </shape>

  </item>

</layer-list>